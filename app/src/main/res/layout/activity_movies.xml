<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MovieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quem foi o diretor de 'O Senhor dos Anéis'?"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupDirector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonPeterCraig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peter Craig" />

            <RadioButton
                android:id="@+id/radioButtonPeterJackson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peter Jackson" />

            <RadioButton
                android:id="@+id/radioButtonPeterParker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peter Parker" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewHarryPotter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qual é o nome da escola de magia em 'Harry Potter'?"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupHarryPotter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonHogwarts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hogwarts" />

            <RadioButton
                android:id="@+id/radioButtonBeauxbatons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beauxbatons" />

            <RadioButton
                android:id="@+id/radioButtonDurmstrang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durmstrang" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewBreakingBad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qual é o nome do protagonista de 'Breaking Bad'?"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupBreakingBad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonWalterWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Walter White" />

            <RadioButton
                android:id="@+id/radioButtonJessePinkman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jesse Pinkman" />

            <RadioButton
                android:id="@+id/radioButtonSaulGoodman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saul Goodman" />
        </RadioGroup>

    </LinearLayout>
</ScrollView>